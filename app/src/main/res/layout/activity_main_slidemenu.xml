<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_slidingRootNav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:visibility="visible"
    android:orientation="vertical">
        <Space
        android:layout_width="match_parent"
        android:layout_height="80sp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_name"
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="name"/>

        <TextView
            android:layout_marginLeft="20sp"
            android:layout_width="wrap_content"
            android:layout_height="70sp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="님의\t여정"/>

    </LinearLayout>


    <Space
    android:layout_width="match_parent"
    android:layout_height="30sp"/>

    <LinearLayout
    android:layout_marginLeft="20sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
</LinearLayout>


    <LinearLayout
    android:id="@+id/btn_recommend"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView_recommend"
        android:layout_marginLeft="20sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:backgroundTint="@color/black"
        android:background="@drawable/ic_baseline_person_outline_24"
        />

    <TextView
        android:id="@+id/textView_recommend"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="테마별 장소 추천"/>
</LinearLayout>

    <Space
    android:layout_width="match_parent"
    android:layout_height="25sp"/>

    <LinearLayout
    android:id="@+id/btn_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_history"
        android:layout_marginLeft="20sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:backgroundTint="@color/black"
        android:background="@drawable/ic_baseline_face_24" />

    <TextView
        android:id="@+id/text_history"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="실시간 장소 검색"/>
</LinearLayout>

    <Space
    android:layout_width="match_parent"
    android:layout_height="25sp"/>

    <LinearLayout
        android:id="@+id/btn_mymap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_mymap"
            android:layout_marginLeft="20sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:backgroundTint="@color/black"
            android:background="@drawable/ic_baseline_map_24" />

        <TextView
            android:id="@+id/text_mymap"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="지도에서 살펴보기"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25sp"/>

    <LinearLayout
    android:id="@+id/btn_myplan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="10sp"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image_myplan"
        android:layout_marginLeft="20sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:backgroundTint="@color/black"
        android:background="@drawable/ic_baseline_history_24" />

    <TextView
        android:id="@+id/text_myplan"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="나의 일정 확인"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25sp"/>

    <LinearLayout
        android:id="@+id/btn_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:layout_marginLeft="20sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:backgroundTint="@color/black"
            android:background="@drawable/baseline_support_agent_24" />

        <TextView
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="로그인/회원 정보 조회"/>

    </LinearLayout>
</LinearLayout>