<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recycler_map_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/activity_map_place_title"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/the_jamsil_3"
                android:textSize="20sp"
                tools:text="item" />

<!--            android:id="@+id/btn_map_close1"-->
            <ImageButton

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:padding="0dp"
                android:visibility="invisible"
                android:src="@drawable/ic_baseline_arrow_down_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_first_place_popular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/the_jamsil_2"
            android:textSize="15sp"
            tools:text="item" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_activity_first_place_popular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:lottie_autoPlay="true"
            app:lottie_fileName="popular0.json"
            app:lottie_loop="true" />

</LinearLayout>

