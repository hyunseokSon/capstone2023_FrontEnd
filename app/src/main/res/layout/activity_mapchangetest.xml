<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".leftMenuBar.MapActivity"
    android:theme="@style/Theme.Main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_main"
        android:visibility="visible">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/frameLayout_main"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/btn_now"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="20dp"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/target" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_map_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#D8D8D8D8">

                <TextView
                    android:id="@+id/tv_norm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="혼잡도 리스트 검색하기"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:clickable="false"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@id/tv_norm">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_norm"
                        android:clickable="false">

                        <EditText
                            android:id="@+id/editText1"
                            android:layout_width="320dp"
                            android:layout_height="44dp"
                            android:layout_marginTop="8dp"
                            android:clickable="false"
                            android:maxLines="1"
                            android:inputType="textPersonName"/>

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="8dp"
                            android:layout_toRightOf="@id/editText1"
                            android:background="@drawable/ic_search"
                            android:clickable="false" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_thirdToSecond"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""/>

                </FrameLayout>



            </RelativeLayout>

            <FrameLayout
                android:id="@+id/layout_background_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <LinearLayout
                    android:clickable="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text=""/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_map_back_origin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text=""/>

                    <LinearLayout
                        android:id="@+id/linear_map_back_origin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="#00FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="4"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textColor="#FFFFFFFF"
                                android:fontFamily="@font/the_jamsil_3"
                                android:textSize="20sp"
                                tools:text="item" />


                            <ImageButton
                                android:id="@+id/btn_map_close1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:layout_gravity="right"
                                android:layout_marginRight="20dp"
                                android:padding="0dp"
                                android:visibility="visible"
                                android:src="@drawable/ic_baseline_arrow_down_24" />

                        </LinearLayout>

                        <TextView
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#FFFFFFFF"
                            android:fontFamily="@font/the_jamsil_2"
                            android:textSize="15sp"
                            tools:text="item" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </LinearLayout>




                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#D0000000"
                android:id="@+id/layout_menu_map"
                android:visibility="invisible">



                <ImageButton
                    android:id="@+id/btn_map_close2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="0dp"
                    android:visibility="visible"
                    android:src="@drawable/ic_baseline_arrow_down_24" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_activity_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="6dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="20dp"
                    android:background="@drawable/layout_background"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_map_menu_origin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </FrameLayout>



    </LinearLayout>





</FrameLayout>




