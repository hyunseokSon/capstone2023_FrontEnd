<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:backgroundTint="@color/main_white_50"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dDay"
            android:layout_marginTop="4dp"
            android:text="제목"
            android:textColor="@color/secondary_grey_black_14"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tv_dDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-3"
            android:textColor="@color/secondary_grey_black_7"
            android:textSize="14dp"
            android:fontFamily="@font/pretendard_semi_bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2021-05-03"
            android:textSize="14dp"
            android:layout_below="@+id/tv_dDay"
            android:layout_marginTop="40dp"
            android:textColor="@color/secondary_grey_black_14"
            android:fontFamily="@font/pretendard_medium"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>