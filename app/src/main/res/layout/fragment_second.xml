<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/fix_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="혼잡도 리스트 검색하기"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_search"
            android:layout_marginTop="8dp"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_search"
            android:layout_toRightOf="@id/et_input"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_input"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_food"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/et_input"
            android:background="@drawable/round_selector"
            android:backgroundTint="@android:color/transparent"
            android:text="음식점"
            android:textColor="@color/secondary_grey_black_14"
            android:fontFamily="@font/pretendard_semi_bold" />

        <Button
            android:id="@+id/btn_shopping"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/btn_food"
            android:layout_below="@+id/et_input"
            android:background="@drawable/round_selector"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:text="쇼핑"
            android:textColor="@color/secondary_grey_black_14"
            android:fontFamily="@font/pretendard_semi_bold" />

        <Button
            android:id="@+id/btn_cafe"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/btn_shopping"
            android:layout_below="@+id/et_input"
            android:background="@drawable/round_selector"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:text="카페"
            android:textColor="@color/secondary_grey_black_14"
            android:fontFamily="@font/pretendard_semi_bold" />

        <Button
            android:id="@+id/btn_study"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/btn_cafe"
            android:layout_below="@+id/et_input"
            android:background="@drawable/round_selector"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginLeft="4dp"
            android:text="공부"
            android:textColor="@color/secondary_grey_black_14"
            android:fontFamily="@font/pretendard_semi_bold" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/fix_relative"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
